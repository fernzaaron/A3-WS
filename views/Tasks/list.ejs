<%- include('../partials/header') %>
<%- include('../partials/main_nav') %>

<main class="container my-4">
        <div class="row">
                <div class="col-md-10 offset-md-1">
                        <!-- Gentle card wrapper to look tidy but simple -->
                        <div class="card mb-3">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                        <strong><%= title %></strong>
                                        <a href="/tasks/add" class="btn btn-sm btn-primary">Add Task</a>
                                </div>
                                <div class="card-body p-2">
                                        <div class="table-responsive">
                                                <table class="table table-sm table-striped mb-0">
                                                        <thead class="table-light">
                                                                <tr>
                                                                        <th class="text-start">Title</th>
                                                                        <th class="text-start">Description</th>
                                                                        <th class="text-center">Due Date</th>
                                                                        <th class="text-center">Status</th>
                                                                        <th class="text-center">Priority</th>
                                                                        <th class="text-center">Actions</th>
                                                                </tr>
                                                        </thead>
                                                        <tbody>
                                                                <!-- keep original loop/structure so code remains familiar -->
                                                                <% for(let count=0; count < TaskList.length; count++) { %>
                                                                <tr>
                                                                        <td><%= TaskList[count].title %></td>
                                                                        <td><%= TaskList[count].description %></td>
                                                                        <td class="text-center"><%= TaskList[count].dueDate %></td>
                                                                        <td class="text-center"><span class="badge bg-secondary"><%= TaskList[count].status %></span></td>
                                                                        <td class="text-center"><%= TaskList[count].priority %></td>
                                                                            <td class="text-center">
                                                                                <a href="/tasks/edit/<%= TaskList[count]._id %>" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                                                                                <a href="/tasks/delete/<%= TaskList[count]._id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this task? This action cannot be undone.');">Delete</a>
                                                                            </td>
                                                                				</tr>
                                                                <% } %>
                                                        </tbody>
                                                </table>
                                        </div>
                                </div>
                        </div>
                </div>
        </div>
</main>

<%- include('../partials/footer') %>
